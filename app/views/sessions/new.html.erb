<h1>Please login!</h1><br /><br />
<p id="notice"><%= params[:notice] %></p><br />

<%= form_tag '/login' do %>
    <div class="field">
        <%= label_tag :login %>
        <%= text_field_tag :login, params[:login] %>
    </div>
    <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
