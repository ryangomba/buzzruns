<%= form_for @event do |f| %>

    <!-- ERRORS -->

    <% if @event.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
            <ul>
                <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>

     <div class="field">
        <%= f.label :kind %><br />
        <%= f.select(:kind, Event::KINDS) %>
    </div>

     <div class="field">
        <%= f.label :team %><br />
        <%= f.check_box :team %>
    </div>

    <div class="actions">
        <%= f.submit %>
    </div>

<% end %>

